<%=form_for(@order, url: order_now_path) do |f| %>
	<div class="form-group row">
		<div class="col-sm-4">
			<%= f.text_field :name_or_business, class: "form-control", placeholder: t('pages.order_now.nb_holder') %>
		</div>
		<div class="col-sm-4">
			<%= f.email_field :email, class: "form-control", placeholder: t('pages.order_now.email') %>
		</div>
		<div class="col-sm-4">
			<%= f.text_field :phone, class: "form-control", placeholder: t('pages.order_now.phone') %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-8">
			<%= f.text_area :message, class: "form-control", placeholder: t('pages.order_now.message') , size: '4x10' %>
		</div>
		
		<div class="col-sm-4">
			<%= f.submit t('pages.order_now.submit_now') , class: "btn btn-success submit-button", style: "width: 60%" %>
		</div>
	</div>

<%end%>