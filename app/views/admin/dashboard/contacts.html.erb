        <div class="col-sm-9 main">
          <h1 class="page-header">Dashboard</h1>

          <h2 class="sub-header">Contacts Messages</h2>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Full name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Subject</th>
                  <th>Message</th>
                </tr>
              </thead>
              <tbody>
              <%if @contacts.blank? %>
               <p>No contact messages at this moment</p>
              <%else%>
              <%@contacts.each do |contact| %>
                <tr>
                  <td>1,001</td>
                  <td><%="#{contact.first_name} #{contact.surname}" %></td>
                  <td><%=contact.email %></td>
                  <td><%=contact.phone%></td>
                  <td><%=contact.subject%></td>
                  <td>Read</td>
                </tr>
                <%end%>
                <%end%>
                
              </tbody>
            </table>
          </div>
        </div>
